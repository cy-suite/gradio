#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/livereload@0.9.3/node_modules/livereload/bin/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/livereload@0.9.3/node_modules/livereload/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/livereload@0.9.3/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules:/Users/peterallen/Projects/gradio/node_modules:/Users/peterallen/Projects/node_modules:/Users/peterallen/node_modules:/Users/node_modules:/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/node_modules/livereload/bin/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/node_modules/livereload/node_modules"
else
  export NODE_PATH="$NODE_PATH:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/livereload@0.9.3/node_modules/livereload/bin/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/livereload@0.9.3/node_modules/livereload/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/livereload@0.9.3/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules:/Users/peterallen/Projects/gradio/node_modules:/Users/peterallen/Projects/node_modules:/Users/peterallen/node_modules:/Users/node_modules:/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/node_modules/livereload/bin/node_modules:/Users/peterallen/Projects/gradio/ui/node_modules/.pnpm/node_modules/livereload/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../livereload/bin/livereload.js" "$@"
else
  exec node  "$basedir/../livereload/bin/livereload.js" "$@"
fi
